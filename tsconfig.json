{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "dist",
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
